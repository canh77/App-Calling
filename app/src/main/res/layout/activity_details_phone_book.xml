<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".DetailsPhoneBookActivity">

    <ImageView
        android:id="@+id/imgbackphonebook"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:onClick="backphonebook"
        android:src="@drawable/ic_backmsg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/boder"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_circledetailpb" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="It Me"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Điện thoại 0399075408"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bodersim"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:src="@drawable/ic_sim1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:text="Mặc định chạy bằng: SIM 1"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:src="@drawable/ic_go" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgcallpb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/bodercall"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_call" />

            <ImageView
                android:id="@+id/imgmessagepb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/bodersms"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:src="@drawable/ic_smsmsg" />

            <ImageView
                android:id="@+id/imggooglemeetpb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/boderggmet"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="5dp"
                android:src="@drawable/ic_googlemeet" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btndiarypb"
            style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bodersim"
            android:fontFamily="@font/roboto_bold"
            android:text="Nhật ký"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btncachingpb"
            style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bodersim"
            android:fontFamily="@font/roboto_bold"
            android:text="Vị trí bộ nhớ đệm"
            android:textSize="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgeditpb"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit" />

            <Button
                style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="Sửa" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgsharepb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_share" />

            <Button
                style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="Chia sẻ" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgotherpb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_otherpb" />

            <Button
                style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="Nhiều hơn" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>