<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical"
    tools:context=".GoogleMeetActivity">

    <ImageView
        android:layout_width="30dp"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:id="@+id/imghelpgoHelp"
        android:onClick="goHelp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_helppb"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Thiết lập Meet gọi điện bằng số điện thoại của bạn"
        android:textColor="@color/black"
        android:textSize="28dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvnumberphoneInternation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="VN (+84)"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imgSelectedNational"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:onClick="select"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_down" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#000000"
                    android:gravity="center"
                    android:background="@drawable/bodernationaly"
                    android:hint="Nhập số điện thoại">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edNumberPhoneUser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:phoneNumber="true"
                        android:maxLines="1"
                        android:textColor="#000" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Những  người biết số của bạn có thể liên hệ với bạn qua các dịch vụ của Google   "
        android:textColor="@color/black" />

<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:gravity="center"-->
<!--        android:text="Bằng việc tiếp tục bạn đồng ý với Điều khoản dịch vụ và công nhận Chính sách quyền riêng tu"-->
<!--        android:textColor="@color/black" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Bạn đang gặp sự cố? Tìm hiểu và cách xác minh số điện thoại của bạn"
        android:textColor="@color/black" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="right"
        android:text="Đồng ý"
        android:textColor="@color/black"
        android:id="@+id/btnAgrre"
        />
</LinearLayout>
