<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lntopfindpb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgbackpb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_backmsg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bodersim"
            android:gravity="center"
            android:orientation="horizontal">
            <!--    <ImageView-->
            <!--        android:id="@+id/imgfindpb"-->
            <!--        android:layout_width="25dp"-->
            <!--        android:layout_height="25dp"-->
            <!--        android:layout_gravity="center"-->
            <!--        android:layout_margin="5dp"-->
            <!--        android:layout_weight="0"-->
            <!--        android:foreground="?attr/selectableItemBackgroundBorderless"-->
            <!--        android:src="@drawable/ic_search" />-->
            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="182dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="8"
                android:gravity="center|left"
                android:hint="Tìm kiếm..."
                android:background="@null"
                android:maxLines="1"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imgmicpb"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_micphone" />

            <ImageView
                android:id="@+id/imgdeletepb"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_deletepb"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListfindpb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp" />

</LinearLayout>