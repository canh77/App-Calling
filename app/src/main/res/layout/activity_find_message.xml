<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FindMessageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/bodercontentgg"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgbackphoneb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_backss" />

        <EditText
            android:id="@+id/edFindMSG"
            android:layout_width="309dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="@null"
            android:hint="Tìm kiếm cuộc trò chuyện"
            android:paddingLeft="5dp"
            android:textColorHint="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgdeletemsg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_deletepb"
            android:visibility="gone" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListFindMSG"
        android:layout_width="389dp"
        android:layout_height="656dp"
        android:layout_margin="10dp" />
</LinearLayout>